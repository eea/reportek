version: '2'

services:
  app:
    build: .
    extra_hosts:
      - "xmlconv.edw.ro:10.0.30.58"
    ports:
      - "8000:8000"
      - "8080:8080"  
    environment:
      - ALLOWED_HOSTS=*
      - DEBUG=yes
      - QA_DEFAULT_XMLRPC_URI=http://xmlconv.edw.ro:8080/RpcRouter
      - HOST=0.0.0.0

  celery-worker:
    extra_hosts:
      - "xmlconv.edw.ro:10.0.30.58"

  tusd:
    ports:
      - "1080:1080"

  rabbitmq:
    ports:
      - "5672:5672"

  nginx:
    ports:
      - "80:80"

volumes:
  pg-data:
    driver: local
  pg-backups:
    driver: local
  tusd-uploads:
    driver: local
  static-files:
    driver: local
